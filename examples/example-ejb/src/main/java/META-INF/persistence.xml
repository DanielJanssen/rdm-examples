<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="examples-ejb" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>jboss/DataSource/mysqlrdm</jta-data-source>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.Amount</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.ArticleDescription</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.ArticleId</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.ArticleName</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.ArticleNumber</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.Currency</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.OrderDate</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.OrderId</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.Quantity</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.ShoppingCartId</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.ShoppingCartItemId</class>
		<class>de.th_koeln.example.shoppingcart.domain.attribute.UserAccountId</class>
		<class>de.th_koeln.example.shoppingcart.domain.entity.Article</class>
		<class>de.th_koeln.example.shoppingcart.domain.entity.Order</class>
		<class>de.th_koeln.example.shoppingcart.domain.entity.ShoppingCart</class>
		<class>de.th_koeln.example.shoppingcart.domain.entity.ShoppingCartItem</class>
		<class>de.th_koeln.example.shoppingcart.domain.entity.UserAccount</class>
		<class>de.th_koeln.example.shoppingcart.domain.vo.PricePerPiece</class>
		<class>de.th_koeln.example.shoppingcart.domain.vo.TotalPrice</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
